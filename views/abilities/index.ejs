<%- contentFor('content') %>
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-6"><h5>Abilities</h5></div>
            <div class="col-6 text-end"><a href="/abilities/create" class="btn btn-primary"> Create </a></div>
        </div>
    </div>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                <% abilities.forEach(e => { %>
                    <tr>
                        <td> <img src="<%= getUrl('uploads/' +e.image)  %>" alt="" class="thumbnail-sm"> </td>
                        <td><%= e.title %> </td>
                        <td><%= e.description %> </td>
                        <td>
                            <span class="badge bg-label-<%= e.status?'success':'danger' %>  me-1"><%= e.status?'Active':'Pause' %></span>
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="abilities/edit/<%= e.id %>"><i class="bx bx-edit-alt me-1"></i>
                                        Edit</a>
                                    <a class="dropdown-item" href="abilities/delete/<%= e.id %>"><i class="bx bx-trash me-1"></i>
                                        Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                <% }) %>
                
              
            </tbody>
        </table>
    </div>
</div>