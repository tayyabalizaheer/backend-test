<%- contentFor('content') %>
<div class="card mb-4">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h5 class="mb-0">Create Abilities</h5>
    </div>
    <div class="card-body">
        <form action="/abilities/store" method="post" enctype="multipart/form-data">


            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-title">Title</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="title" id="basic-default-title" />
                    <%- include('../partials/error', {field: 'title'}); %>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-image">image</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="image" id="basic-default-image" />
                    <%- include('../partials/error', {field: 'image'}); %>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-description">Description</label>
                <div class="col-sm-10">
                    <textarea class="form-control" name="description" id="basic-default-description" rows="5"></textarea>
                    <%- include('../partials/error', {field: 'description'}); %>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-status">status</label>
                <div class="col-sm-10">
                    <div class="form-check form-switch mb-2">
                        <input class="form-check-input" type="checkbox" name="status" id="flexSwitchCheckChecked" checked="">
                        <label class="form-check-label" for="flexSwitchCheckChecked">Active</label>
                    </div>
                    <%- include('../partials/error', {field: 'status'}); %>
                </div>
            </div>
            <div class="row justify-content-end">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>