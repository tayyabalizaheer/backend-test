<%- contentFor('content') %>
<div class="card mb-4">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h5 class="mb-0">Basic Information</h5>
    </div>
    <div class="card-body">
        <form action="setting-save" method="post">
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-career_title">Career title</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="career_title" id="basic-default-career_title" value="<%= setting.career_title??"" %>" />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-name">name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="name" id="basic-default-name" value="<%= setting.name??"" %>" />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-about">About</label>
                <div class="col-sm-10">
                    <textarea type="text" class="form-control" name="about" id="basic-default-about" placeholder="ACME Inc." ><%= setting.about??"" %></textarea>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-phone">phone</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="phone" id="basic-default-phone" value="<%= setting.phone??"" %>" />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-email">email</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="email" id="basic-default-email" value="<%= setting.email??"" %>"  />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-address">address</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="address" id="basic-default-address" value="<%= setting.address??"" %>"  />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-address">experience</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="experience" id="basic-default-experience"
                        value="<%= setting.experience??"" %>" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-address">nationality</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="nationality" id="basic-default-nationality"
                        value="<%= setting.nationality??"" %>" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-address">languages</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="languages" id="basic-default-languages"
                        value="<%= setting.languages??"" %>" />
                </div>
            </div>

            <div class="row justify-content-end">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Send</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h5 class="mb-0">Profile Pic</h5>
    </div>
    <div class="card-body">
        <form action="setting-save" method="post" enctype="multipart/form-data">


            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-profile">Select File</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="profile" id="basic-default-profile" />
                </div>
            </div>
            <div class="row justify-content-end">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h5 class="mb-0">Upload CV</h5>
    </div>
    <div class="card-body">
        <form action="setting-save" method="post" enctype="multipart/form-data">
            

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-cv">Select File</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="cv" id="basic-default-cv" />
                </div>
            </div>
            <div class="row justify-content-end">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>