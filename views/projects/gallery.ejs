<%- contentFor('content') %>
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-6"><h5>Project Gallery</h5></div>
        </div>
        <div class="row">
            <form action="/projects/gallery/upload/<%= project_id %> " method="post" enctype="multipart/form-data">
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-image">image</label>
                    <div class="col-sm-6">
                        <input type="file" class="form-control" name="image" id="basic-default-image" />
                        <%- include('../partials/error', {field: 'image'}); %>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-check form-switch mb-2">
                            <input class="form-check-input" type="checkbox" name="status" id="flexSwitchCheckChecked" checked="">
                            <label class="form-check-label" for="flexSwitchCheckChecked">Active</label>
                        </div>
                        <%- include('../partials/error', {field: 'status'}); %>
                    </div>
                    <button class="btn btn-primary col-2">Save</button>
                </div>
            </form>
        </div>
    </div>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                <% images.forEach(e => { %>
                    <tr>
                        <td> <img src="<%= getUrl('uploads/' +e.path)  %>" alt="" class="thumbnail-sm"> </td>
                        <td>
                            <span class="badge bg-label-<%= e.status?'success':'danger' %>  me-1"><%= e.status?'Active':'Pause' %></span>
                        </td>
                        <td>
                            <a class="btn btn-danger" href="/projects/gallery/delete/<%= e.id %>">
                                Delete </a>
                        </td>
                    </tr>
                <% }) %>
                
              
            </tbody>
        </table>
    </div>
</div>